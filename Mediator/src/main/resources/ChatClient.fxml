<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="ChatClientController">
    <TextArea fx:id="chatDisplay" editable="false" prefHeight="300"/>
    <TextField fx:id="recipientInput" promptText="Enter recipient username"/>
    <TextField fx:id="messageInput" promptText="Enter your message"/>
    <Button text="Send" onAction="#sendMessage"/>
</VBox>
